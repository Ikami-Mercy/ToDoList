<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background=" #242132"
        android:orientation="vertical"
        tools:context=".activities.CreateNewTaskActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:gravity="left"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_keyboard_backspace_black_24dp"
                android:id="@+id/back"
                android:layout_gravity="left"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="3dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:layout_marginRight="2dp"
            android:gravity="center_vertical"
            android:paddingBottom="1dp"
            android:paddingRight="2dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="0dp"
                android:layout_height="wrap_content">


            </LinearLayout>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="41dp"
                android:layout_height="46dp"
                android:id="@+id/userPic"
                android:gravity="end"
                android:layout_margin="8dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/userpic" />
        </LinearLayout>


    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        >
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/profileName"
        android:layout_height="wrap_content"
        android:text="Add new task"
        android:textColor="@color/colorFabIcon"
        android:textSize="19dp"
        android:textStyle="bold"
        android:fontFamily="@font/avenir"
        android:layout_margin="15dp"
        />

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/et_taskTittle"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorFabIcon"
            android:textColor="@color/colorFabIcon"
            android:fontFamily="@font/avenir"
            android:layout_margin="15dp"
            android:padding="10dp"
            android:lineSpacingMultiplier="1.3"
            android:hint="Note Tittle"/>

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/et_addTask"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorFabIcon"
            android:textColor="@color/colorFabIcon"
            android:fontFamily="@font/avenir"
            android:layout_margin="15dp"
            android:padding="10dp"
            android:lineSpacingMultiplier="2.0"
            android:hint="Start writting"/>
    </LinearLayout>

    <Button
        android:id="@+id/save_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginBottom="30dp"
        android:visibility="visible"
        android:fontFamily="@font/avenir"
        android:text="Save Task"
        android:drawablePadding="5dp"
        android:paddingRight="5dp"
        android:background="@drawable/roundedaddbutton"
        android:layout_gravity="right|bottom"
        />
</LinearLayout>