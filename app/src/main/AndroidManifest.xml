<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.myToDoList">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.myToDoList.ui.activities.SingleTaskActivity"></activity>
        <activity android:name="com.myToDoList.ui.activities.SetProfileActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.myToDoList.ui.activities.SetProfileActivity" />

        </activity>
        <activity android:name="com.myToDoList.ui.activities.ProfileActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.myToDoList.ui.activities.ProfileActivity" />
        </activity>
        <activity android:name="com.myToDoList.ui.activities.CreateNewTaskActivity"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.myToDoList.ui.activities.CreateNewTaskActivity"
                 />
        </activity>
        <activity android:name="com.myToDoList.ui.activities.DisplayToDoListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.myToDoList.ui.activities.DisplayToDoListActivity" />
        </activity>
        <activity android:name="com.myToDoList.ui.activities.DashboardActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>